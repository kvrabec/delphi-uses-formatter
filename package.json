{
    "name": "pascal-uses-formatter",
    "displayName": "pascal-uses-formatter",
    "description": "sorts the uses section in pascal files",
    "version": "0.1.0",
    "publisher": "tuncb",
    "repository": "https://github.com/tuncb/delphi-uses-formatter",
    "license": "Apache-2.0",
    "engines": {
        "vscode": "^1.36.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:pascal",
        "onLanguage:objectpascal",
        "onCommand:pascal-uses-formatter.formatUses"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "pascal-uses-formatter.formatUses",
                "title": "Format uses section"
            }
        ],
        "configuration": {
          "title": "pascal-uses-formatter",
          "properties": {
            "pascal-uses-formatter.formatOnSave": {
              "type": "boolean",
              "default": true,
              "description": "Format uses section automatically after first activation"
            },
            "pascal-uses-formatter.convertOldStyleSystemUnitNames": {
              "type": "boolean",
              "default": true,
              "description": "Convert old style system units to dotted verison"
            },
            "pascal-uses-formatter.convertCustomUnitNames": {
              "type": "boolean",
              "default": true,
              "description": "Convert unit names to defined ones"
            },
            "pascal-uses-formatter.customUnitNames": {
              "type": "array",
              "default": [],
              "description": "Custom defined unit name conversions",
              "items": {
                "type": "object",
                "title": "Custom unit names to convert",
                "properties": {
                    "old": {
                        "type": "string",
                        "description": "Old name to convert, case insensitive"
                    },
                    "new": {
                        "type": "string",
                        "description": "New name"
                    }
                }
            },
            }
          }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTests.js",
        "deploy": "vsce publish -p"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^8.10.25",
        "@types/vscode": "^1.34.0",
        "chai": "^4.2.0",
        "glob": "^7.1.4",
        "mocha": "^6.1.4",
        "source-map-support": "^0.5.12",
        "tslint": "^5.16.0",
        "typescript": "^3.5.1",
        "vsce": "^1.69.0",
        "vscode-test": "^1.0.0"
    }
}
